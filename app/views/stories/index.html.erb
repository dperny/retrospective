<p id="notice"><%= notice %></p>

<h1>Listing Stories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Storyteller</th>
      <th>Location</th>
      <% if @admin %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.date %></td>
        <td><a href="/stories/<%= story.id %>"><%= story.title %></a></td>
        <td><%= story.storyteller %></td>
        <td><%= story.location.name %></td>
      <% if @admin %>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @admin %>
  <%= link_to 'New Story', new_story_path %> |
  <%= link_to 'Sign Out', destroy_admin_session_path %>
<% end %>
