    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :storyteller %><br>
    <%= f.text_field :storyteller %>
  </div>
  <div class="field">
    <%= f.label :location_id %><br>
    <%= f.collection_select :location_id, Location.order(name: :asc), :id, :name %>
  </div>
  <div class="field">
    <%= f.label :audio %><br>
    <%= f.file_field :audio %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
